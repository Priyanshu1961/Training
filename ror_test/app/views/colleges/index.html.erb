



<h1>Listing Colleges</h1>
<%= form_tag colleges_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>


<table>
  <tr>
    <th>Name</th>
    <th>Extended Year</th>
        <th
  </tr>

  <% @colleges.each do |college| %>
    <tr>
      <td><%= college.name %></td>
      <td><%= college.extended_year %></td>

      <td><%= link_to 'Show', college_path(college) %></td>
        <td><%= link_to 'Edit', edit_college_path(college) %></td>
        <td><%= link_to 'Destroy', college_path(college),
               method: :delete,
               data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>
<%= link_to 'New college', new_college_path %>
<%= link_to 'Back', colleges_path %>
